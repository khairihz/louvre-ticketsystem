{% extends 'base.html.twig' %}
{% form_theme form 'form/bulma.twig' %}

{% block title %}
    {{ parent() }} - {{ 'step_title'|trans }} 2
{% endblock %}

{% block step %}
    {{ 'step_title'|trans }} 2
{% endblock %}

{% block breadcrumb %}
    {% include 'booking/breadcrumb.html.twig' with{'step': 2 }only %}
{% endblock %}

{% block container %}
    <div class="content">
        <div class="row personal-form-title">
            <h4>{{ 'tickets'|trans }}</h4>
        </div>

        {{ form_start(form) }}
        {% for ticket in form.tickets %}
            <div class="box">
                {{ form_row(ticket.name) }}
                {{ form_row(ticket.birthdate, {'attr': {'class': 'input-style'}}) }}
                {{ form_row(ticket.country) }}
                {{ form_row(ticket.reduceRate, {'attr': {'class': 'checkbox-style'}}) }}
            </div>
        {% endfor %}
        <input class="button" type="submit" value="{{ 'submit.button'|trans }}">
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
