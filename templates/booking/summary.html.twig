{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'step_title'|trans }} 3
{% endblock %}

{% block step %}
    <h2 id="step-title">{{ 'step_title'|trans }} 3</h2>
{% endblock %}

{% block breadcrumb %}
    {% include 'booking/breadcrumb.html.twig' with{'step': 3 }only %}
{% endblock %}

{% block body %}
    <div class="col-lg-8 col-md-9 col-sm-12 personal-form">
        <main>
            <div class="row personal-form-title">
                <h4>{{ 'booking.summary'|trans }}{% block summaryTitle %}{% endblock %}</h4>
            </div>

            <table class="table table-striped table-responsive-xl justify-content-center">
                <thead>
                <tr>
                    <th>#</th>
                    <th scope="col">{{ 'ticket.name'|trans }}</th>
                    <th scope="col">{{ 'booking.visitDate'|trans }}</th>
                    <th scope="col">{{ 'booking.type_of_ticket'|trans }}</th>
                    <th scope="col">{{ 'ticket.reduce_rate'|trans }}</th>
                    <th scope="col">{{ 'ticket.unit_price'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for ticket in booking.tickets %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ ticket.name }}</td>
                        <td>{{ booking.visit.format('d/m/Y') }}</td>
                        {% if booking.typeOfTicket is same as(constant('App\\Entity\\Booking::TYPE_OF_TICKET_DAY')) %}
                            <td>{{ 'booking.day'|trans }}</td>
                        {% else %}
                            <td>{{ 'booking.half_day'|trans }}</td>
                        {% endif %}
                        <td>{{ ticket.reduceRate ? 'x' : '' }}</td>
                        <td>{{ ticket.price }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th scope="row">{{ 'booking.total_price'|trans }}</th>
                    <td>{{ booking.price }}</td>
                </tr>

                </tbody>
            </table>

            {% block payment %}
                <form id="payment-form" action="{{ path('summary') }}" method="post">
                    <input type="hidden" name="stripe-token" id="stripe-token" value="">
                    <button id="payment-btn" data-key="{{ stripe_public_key }}"
                            data-title="{{ "payment.stripe_title"|trans }}"
                            type="button"
                            class="d-flex justify-content-center payment-button">{{ 'payment.stripe_label'|trans }}</button>
                </form>
            {% endblock %}
            {% block returnButton %}
            {% endblock %}
        </main>
    </div>



{% endblock %}



