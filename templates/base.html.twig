<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{{ 'head.main_title'|trans }}{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>

<body>
{% block content %}
    <header>
        <div class="container">
            <div class="row justify-content-end" id="nav-style">
                {% block nav %}
                    <nav class=" navbar navbar-dark navbar-expand-md  navbar-fixed-top" id="navBar-style"
                         role="navigation">

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
                                aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarToggler">

                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('homepage') }}">{{ 'home'|trans }}</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="louvre-nav"
                                       href="https://www.louvre.fr/">{{ 'header.label.museum'|trans }}</a>
                                </li>
                                {% block language %}
                                    <li class="dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="dropDownMenuLink"
                                           data-toggle="dropdown" role="button" aria-haspopup="true"
                                           aria-expanded="false">{{ 'header.label.language'|trans }}</a>

                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item"
                                               href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">{{ 'english'|trans }}</a>
                                            <a class="dropdown-item"
                                               href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">{{ 'french'|trans }}</a>
                                        </div>
                                    </li>
                                {% endblock %}
                            </ul>
                        </div>
                    </nav>
                {% endblock %}
            </div>
        </div>
    </header>

    {% block flash %}
        {% for message in app.session.flashbag.get('success') %}
            <div class="container" id="success">
                <div class="alert alert-success alert-dismissible" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {% endfor %}
        {% for message in app.session.flashbag.get('error') %}
            <div class="container" id="success">
                <div class="alert alert-danger alert-dismissible" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        {% endfor %}
    {% endblock %}

    <div class="container">
        {% block stepScale %}
            <div class="row" aria-label="breadcrumb">
                <div class="col-md-12" id="breadcrumb">
                    {% block breadcrumb %}{% endblock %}
                </div>
            </div>
        {% endblock %}

        <div class="row step">
            {% block step %}
            {% endblock %}
        </div>


        <div class="row">

            {% block body %}
            {% endblock %}

            {% block news %}
                <div class="col-lg-4 col-md-3 col-sm-12 news">
                    <div>
                        <h4>{{ 'practical_news.title'|trans }}</h4>
                        <h5>{{ 'practical_news.schedule'|trans }}</h5>
                        <p>{{ 'practical_news.schedule_speech'|trans }}</p>

                        <h5>{{ 'practical_news.closed.days_closures'|trans }}</h5>
                        <p>{{ 'practical_news.closed.days_speech'|trans }}</p>
                    </div>

                    <div>
                        <h4>{{ 'cgv.rates'|trans }}</h4>
                        <ul>
                            <li>{{ 'practical_news.rates.adult'|trans }} : 16€</li>
                            <li>{{ 'practical_news.rates.child'|trans }} : 8€</li>
                            <li>{{ 'practical_news.rates.under_four'|trans }} : 0€</li>
                            <li>{{ 'practical_news.rates.senior'|trans }} : 12€</li>
                            <li>{{ 'ticket.reduce_rate'|trans }}* : 10€</li>
                        </ul>
                        <p>*{{ 'practical_news.reduce_rate'|trans }}</p>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>

    <footer class="container footer">
        <div class="row" >
            <div class="col-4 align-middle align-self-center">
                <div><a href="{{ path('news') }}">{{ 'practical_informations'|trans }}</a></div>
            </div>
            <div class="col-4 align-middle align-self-center">
                <div><a href="{{ path('legal_mentions') }}">{{ 'legal_mentions.title'|trans }}</a></div>
            </div>
            <div class="col-4 align-middle align-self-center">
                <div><a href="{{ path('sale') }}">{{ 'general_terms_of_sale'|trans }}</a></div>
            </div>
        </div>

        <div class="row copyright">
            <div class="col-lg-12 align-middle align-self-center">
                <hr/>
                <p>&copy; Le Louvre — 2020</p>
            </div>
        </div>

    </footer>
{% endblock %}

{{ encore_entry_script_tags('app') }}

</body>
</html>
